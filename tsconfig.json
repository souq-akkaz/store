{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2018",
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}